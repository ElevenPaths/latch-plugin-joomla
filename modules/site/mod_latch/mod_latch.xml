<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.2" client="site" method="upgrade">
    <name>MOD_LATCH</name>
    <author>Eleven Paths</author>
    <authorUrl>www.elevenpaths.com</authorUrl>
    <license>GNU General Public License version 2 or later, see LICENSE.</license>
    <copyright>Copyright (C) 2013-2014 Eleven Paths. All rights reserved.</copyright>
    <version>2.0.0</version>
    <creationDate>April 2014</creationDate>
    <description>MOD_LATCH_XML_DESCRIPTION</description>
	<scriptfile>install.php</scriptfile>
    <files>
        <filename>LICENSE</filename>
        <filename>mod_latch.xml</filename>
        <filename module="mod_latch">mod_latch.php</filename>
        <folder>tmpl</folder>
    </files>
    <languages folder="language">
        <!-- en-GB -->
        <language tag="en-GB">en-GB/en-GB.mod_latch.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_latch.sys.ini</language>
        <!-- es-ES -->
        <language tag="es-ES">es-ES/es-ES.mod_latch.ini</language>
        <language tag="es-ES">es-ES/es-ES.mod_latch.sys.ini</language>
    </languages>

    <!-- Medias -->
    <media destination="mod_latch" folder="media">
        <folder>css</folder>
        <folder>images</folder>
    </media>

    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field
                    name="layout"
                    type="modulelayout"
                    label="JFIELD_ALT_LAYOUT_LABEL"
                    description="JFIELD_ALT_MODULE_LAYOUT_DESC"
                />
            </fieldset>
        </fields>
    </config>
</extension>