<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="user">
    <name>Latch user plugin for Joomla!</name>
    <author>Eleven Paths</author>
    <authorUrl>www.elevenpaths.com</authorUrl>
    <license>GNU General Public License version 2 or later, see LICENSE.</license>
    <copyright>Copyright (C) 2013-2014 Eleven Paths. All rights reserved.</copyright>
    <version>2.0.0</version>
    <creationDate>April 2014</creationDate>
    <description>Latch plugin for users for Joomla!</description>
    <scriptfile>install.php</scriptfile>
    <files>
        <filename>LICENSE</filename>
        <filename plugin="latch">latch.php</filename>
        <filename>twoFactorForm.php</filename>
    </files>
    <languages folder="language">
        <!-- en-GB -->
        <language tag="en-GB">en-GB/en-GB.plg_user_latch.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_user_latch.sys.ini</language>
        <!-- es-ES -->
        <language tag="es-ES">es-ES/es-ES.plg_user_latch.ini</language>
        <language tag="es-ES">es-ES/es-ES.plg_user_latch.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="latch_appID"
                    type="text"
                    size="45"
                    maxlength="20"
                    label="PLG_USER_LATCH_PARAM_APPLICATION_ID_LABEL"
                    description="PLG_USER_LATCH_PARAM_APPLICATION_ID_DESC"
                />
                <field
                    name="latch_appSecret"
                    type="text"
                    size="45"
                    maxlength="40"
                    label="PLG_USER_LATCH_PARAM_APPLICATION_SECRET_LABEL"
                    description="PLG_USER_LATCH_PARAM_APPLICATION_SECRET_DESC"
                />
                <field
                    name="latch_host"
                    type="text"
                    size="40"
                    label="PLG_USER_LATCH_PARAM_HOST_LABEL"
                    description="PLG_USER_LATCH_PARAM_HOST_DESC"
                    default="https://latch.elevenpaths.com"
                />
            </fieldset>
        </fields>
    </config>
</extension>