<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.2" client="site" method="upgrade">
    <name>Latch Module for Joomla!</name>
    <author>Eleven Paths</author>
    <authorUrl>www.elevenpaths.com</authorUrl>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <copyright>Copyright (C) 2013-2019 Eleven Paths. All rights reserved.</copyright>
    <version>3.0.0</version>
    <creationDate>December 2016</creationDate>
    <description>Latch authentication plugin for Joomla!</description>
	<scriptfile>install.php</scriptfile>
    <files>
    	<folder>language</folder>
        <folder>tmpl</folder>
        <filename>mod_latch.xml</filename>
        <filename module="mod_latch">mod_latch.php</filename>
    </files>

    <!-- Medias -->
    <media folder="media">
        <folder>mod_latch</folder>
    </media>

    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field
                    name="layout"
                    type="modulelayout"
                    label="JFIELD_ALT_LAYOUT_LABEL"
                    description="JFIELD_ALT_MODULE_LAYOUT_DESC"
                />
            </fieldset>
        </fields>
    </config>
</extension>